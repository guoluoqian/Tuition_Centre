  h1, h2 {
    color: #333;
  }

  .section {
    margin-top: 30px;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  li {
    background: #eef;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 5px;
  }

  /* Popup styles */
