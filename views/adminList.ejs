<!DOCTYPE html>
<html>

<head>
  <title>Admin Dashboard</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
</head>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 20px;
  }

  .dashboard-container {
    max-width: 900px;
    margin: auto;
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }

  h1,
  h2 {
    color: #333;
  }

  .section {
    margin-top: 30px;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  li {
    background: #eef;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 5px;
  }

  /* Popup styles */
  .announcement-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .popup-content {
    background: #fff;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    width: 300px;
  }

  .popup-content button {
    margin-top: 15px;
    padding: 8px 16px;
    border: none;
    background: #007bff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
  }

  .popup-content button:hover {
    background: #0056b3;
  }
</style>

<body>
  <div class="container">
    <h1 class="mt-5">Dashboard</h1>
    <p>Welcome, username</p>
    <a href="/admin" class="btn btn-primary">Back</a>
    <a href="/logout" class="btn btn-primary">Logout</a>
  </div>
  </head>

  <body>

    <div class="announcement-popup" id="announcement">
      <div class="popup-content">
        <h2>ðŸ“¢ Announcement</h2>
        <p>New features have been added to the dashboard!</p>
        <button onclick="closePopup()">Close</button>
      </div>
    </div>

    <div class="dashboard-container">
      <h1>Admin Dashboard</h1>
      <div class="container">
        <div>
          <h3>Registered Admin</h3>
        </div>
        <table class="table table-hover small text-center">
          <thead>
            <tr>
              <th width="100">Username</th>
              <th width="100">Password</th>
              <th width="50">Name</th>
              <th width="50">Date of Birth</th>
              <th width="50">Email</th>
              <th width="50">Address</th>
              <th width="50">Contact</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < List.length; i++) { %>
              <tr>
                <td>
                  <%= List[i].username %>
                </td>
                <td>
                  <%= List[i].password %>
                </td>
                <td>
                  <%= List[i].name %>
                </td>
                <td>
                  <%= List[i].dob %>
                </td>
                <td>
                  <%= List[i].email %>
                </td>
                <td>
                  <%= List[i].address%>
                </td>
                <td>
                  <%= List[i].contact%>
                </td>
                <td>
                  <a href="/editAdmin/<%= List[i].adminId %>">edit</a>
                </td>
                <td> 
                  <a href="/deleteAdmin/<%= List[i].adminId %>" onclick="return confirm('Are you sure you want to delete this admin?');">delete</a>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>

      <script>
        function closePopup() {
          document.getElementById("announcement").style.display = "none";
        }
        window.onload = function () {
          document.getElementById("announcement").style.display = "flex";
        };
      </script>
      
</body>

</html>