  <title>Learning Centre</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</head>
<style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
    background: #fff;
    color: #333;
  }

  .navbar {
    background-color: white;
    padding: 15px 30px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    border-bottom: 1px solid #ccc;
  }

  .logo {
    font-weight: bold;
    font-size: 20px;
    margin-bottom: 10px;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    /* spacing between links */
    align-items: center;
  }

  .nav-links a {
    text-decoration: none;
    color: black;
    font-size: 16px;
    padding: 8px 10px;
  }

  .profile-box {
    width: 300px;
    padding: 20px;
    border: 2px solid #333;
    background-color:#f5f5f5;
    font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  }

  .contact-button {
    background-color: #f4511e;
    color: white;
    border-radius: 5px;
    font-weight: bold;
  }

  .logout-button {
    background-color: red;
    color: white;
    border-radius: 5px;
    font-weight: bold;
  }

  .navbar nav a {
    margin: 0 10px;
    text-decoration: none;
    color: #333;
  }

  .navbar .button {
    background-color: #f4511e;
    color: white;
    padding: 8px 15px;
    border-radius: 4px;
  }

  

.dropdown {
  position: relative;
}

.dropdown-menu {
  display: none;
  position: absolute;
  background-color: #333;
  min-width: 160px;
  top: 100%;
  left: 0;
  z-index: 1000;
}

.dropdown-menu li {
  list-style: none;
}

.dropdown-menu li a {
  display: block;
  color: white;
  padding: 10px;
  text-decoration: none;
  border-bottom: 1px solid #555;
}

.dropdown-menu li a:hover {
  background-color: #555;
}

/* Show dropdown on hover */
.dropdown:hover .dropdown-menu {
  display: block;
}



.h1 {
  text-align: center;
  margin-top: 15px;
  font-size: 24px;
}

.session-btn {
  background-color: #1ee6f4;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-weight: bold;
}


.text-center {
  text-align: left;
  margin-top: 20px;
  font-size: 20px;
}

.h3 {
  text-align: left;
  margin-top: 20px;
  font-size: 35px;
}

  .logos img {

       height: 100px;
     }
</style>

<body>
  <header class="navbar">
          <div class="logos">
        <img src="/images/rp-logo.jpg" alt="EDUFIRST Logo">
        </div>
    <div class="logo">LEARNING CENTRE</div>
    <nav class="nav-links">
      <a href="/student">HOME</a>
      <a href="/SInfo/" class="profile-box">@<%= student.username %></a>
      <a href="/contact" class="contact-button">CONTACT US</a>
      <a href="/logout" class="logout-button">LOGOUT</a>
    </nav>
  </header>

    <header class="navbar">
    <nav class="nav-links">
      <a href="/session" class="session-btn">SESSIONS</a>

  <h1 class="h1">Welcome back <%= student.username %> !</h1>

  <div class="container">

    <div class="text-center">
      <h2 >Session Signup</h2>
    </div>
    <br>
    <div>
      <h3>Available</h3>
    </div>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Subject</th>
          <th width="100">Date</th>
          <th width="50">Time</th>
          <th width="50">Teacher</th>
          <th width="50">Duration</th>
          <th width="50">Student</th>
          <th width="50">Sign up</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < sessionA.length; i++) { %>
          <tr>
            <td>
              <%= sessionA[i].subject %>
            </td>
            <td>
              <%= sessionA[i].session_date %>
            </td>
            <td>
              <%= sessionA[i].session_time %>
            </td>
            <td>
              <%= sessionA[i].teacher_name %>
            </td>
            <td>
              <%= sessionA[i].duration %>
            </td>
            <td>
              <%= sessionA[i].current_student%> / <%= sessionA[i].max_students %>
            </td>
            <!-- Success signup Link -->
            <td>
              <form action="/signup/<%= sessionA[i].sessionId %>" method="POST">
                <button type="submit" class="btn btn-sm btn-primary">Sign Up</button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <div>
      <h3 class="h3">Signed up</h3>
    </div>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Subject</th>
          <th width="100">Date</th>
          <th width="50">Time</th>
          <th width="50">Teacher</th>
          <th width="50">Duration</th>
          <th width="50">Student</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < sessionS.length; i++) { %>
          <tr>
            <td>
              <%= sessionS[i].subject %>
            </td>
            <td>
              <%= sessionS[i].session_date %>
            </td>
            <td>
              <%= sessionS[i].session_time %>
            </td>
            <td>
              <%= sessionS[i].teacher_name %>
            </td>
            <td>
              <%= sessionS[i].duration %>
            </td>
            <td>
              <%= sessionS[i].current_student%> / <%= sessionS[i].max_students %>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>