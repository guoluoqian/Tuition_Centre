}

.logo {
    font-weight: bold;
    font-size: 20px;
    margin-bottom: 10px;
}

.nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 15px; /* spacing between links */
    align-items: center;
}

.nav-links a {
    text-decoration: none;
