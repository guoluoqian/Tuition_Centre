</style>
<body>
  <header class="navbar">
    <div class="logo">LEARNING CENTRE</div>
    <nav class="nav-links">
      <a href="/">HOME</a>
      <a href="/about">ABOUT US</a>
      <a href="/subjects">SUBJECTS ‚ñº</a>
      <a href="/location">LOCATIONS ‚ñº</a>
    <a href="/login" class="login-button">LOG IN</a>
        <a href="/register" class="register-button">REGISTER</a>
      <a href="/contact" class="contact-button">CONTACT US</a>
    </nav>
  </header>

<body>
    <div class="container mt-5">
        <h1>üì¨ Inbox Messages</h1>
        <a href="/admin" class="btn btn-primary mb-4">‚Üê Back to Dashboard</a>

        <ul id="inbox-list" class="list-group">
            <!-- Messages will be loaded here -->
        </ul>
    </div>

    <script>
        // Fetch inbox messages
        fetch('/api/messages')
            .then(response => response.json())
            .then(data => {
                var inboxList = document.getElementById("inbox-list");

                for (var i = 0; i < data.length; i++) {
                    var li = document.createElement("li");
                    li.className = "list-group-item";
                    li.innerHTML = "<strong>" + data[i].sender + ":</strong> " + data[i].message;
                    inboxList.appendChild(li);
                }

                if (data.length === 0) {
                    inboxList.innerHTML = "<li class='list-group-item'>No messages found.</li>";
                }
            })
            .catch(error => {
                document.getElementById("inbox-list").innerHTML = "<li class='list-group-item text-danger'>Error loading messages.</li>";
                console.error("Fetch error:", error);
            });
    </script>
</body>
</html>
