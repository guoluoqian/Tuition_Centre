<body>
<div class="container mt-5">
    <h1>üì¨ Inbox Messages</h1>
<a href="/admin" class="btn btn-primary mb-4">‚Üê Back to Dashboard</a>

    <ul id="inbox-list" class="list-group">
        <!-- Messages will be loaded by JavaScript -->
    </ul>
</div>

<h2>Admin Inbox</h2>
<ul id="inboxList"></ul>

<script>
fetch("http://localhost:3000/inbox")
  .then(res => res.json())
  .then(messages => {
    const list = document.getElementById("inboxList");
    list.innerHTML = "";
    for (let i = 0; i < messages.length; i++) {
        const item = document.createElement("li");
        item.innerText = `[${messages[i].sender_role}] ${messages[i].sender_name}: ${messages[i].message} (${messages[i].timestamp})`;
        list.appendChild(item);
    }
  });
</script>
