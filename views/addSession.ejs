<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Tuition Centre App</title>
    </head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Tuition Centre App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/admin">Sessions</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="mt-5">Add session</h1>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/session" method="POST" class="mt-4" enctype="multipart/form-data">
            <div class="form-group">
                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject" class="form-control" required
                <% if (formData && formData.subject) { %> value="<%= formData.subject %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="session_date">Date:</label>
                <input type="date" id="session_date" name="session_date" class="form-control" required 
                <% if (formData && formData.session_date) { %> value="<%= formData.session_date %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="session_time">Time:</label>
                <input type="time" id="session_time" name="session_time" class="form-control" required 
                <% if (formData && formData.session_time) { %> value="<%= formData.session_time %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="teacher_name">Appoint Teacher:</label>
                <input type="text" id="teacher_name" name="teacher_name" class="form-control" required
                <% if (formData && formData.teacher_name) { %> value="<%= formData.teacher_name %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="duration">Duration:</label>
                <input type="time" id="duration" name="duration" class="form-control" required 
                <% if (formData && formData.duration) { %> value="<%= formData.duration %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="max_students">No. of students:</label>
                <input type="number" id="max_students" name="max_students" class="form-control" required 
                <% if (formData && formData.max_students) { %> value="<%= formData.max_students %>" <% } else { %> value="" <% } %>>
            </div>
            <input type="hidden" name="userType" value="admin">
            <button type="submit" class="btn btn-primary">Register Session</button>
        </form>
    </div>
</body>